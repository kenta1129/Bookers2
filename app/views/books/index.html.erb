<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class = "col-md-3">
      <%= render 'books/userinfo' %>
    </div>
    
<div class = "col-md-8 offset-md-1">
  <table class="table table-lg user-index">
     <h2>Books</h2>
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
  	    </thead>
<tbody>
  <% @books.each do |book| %>
  <tr>
    <td>
      <%= link_to user_path(book.user) do %>
      <% if @book.profile_image.attached? %>
      <%= image_tag @book.profile_image, size: "50x50" %>
      <% else %>
      <%= image_tag 'no_image', size: "50x50" %>
      <% end %>
    </td>
      <td><%= link_to book.title, book_path(book.id) %>
          <% end %>    
      </td>
      <td><%= book.body %>
      <% end %>
      </td>
        </tr>
  </tbody>
</table>
</div>
</div>
</div>