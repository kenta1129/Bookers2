
      <h5 class="text-dark bg-light py-4 mb-0">Sign up</h5>
      
        </div>
        <% if @user.errors.any? %>
          <ul class="alert alert-danger text-left" role="alert">
            <h6 class="alert-heading">
              <%= @user.errors.count %>件のエラーが発生しました
            </h6>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @user, url: user_registration_path do |f| %>
           <h7>Name</h7>
            <br>
           <%= f.text_field :name %>
           <br>
           <h7>Email</h7>
            <br>
            <%= f.email_field :email %>
           <br>
           <h7>Password (6 characters minimum)</h7>
            <br>
            <%= f.text_field :password %>
           <br>
          <h7>Password confirmation</h7>
           <br>
            <%= f.password_field :password_confirmation %>
           <br>
          </div>
          <%= f.submit "Sign Up" %>
        <% end %>
      </div>

      <%= render "devise/shared/links" %>